<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:layout_margin="5dp"
        android:padding="12dp"
        card_view:cardBackgroundColor="@color/main2Trans"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="2dp"
        card_view:contentPadding="4dp"
        >

    <ImageView
            android:padding="6dp"
            android:id="@+id/recycler_view_v_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/cat_img"
            >
    </ImageView>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40sp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:background="@color/main2Trans"
            >
        <TextView
                android:id="@+id/recycler_view_v_txt_location"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:text="@string/animal_name_temp"
                android:textSize="16sp"
                android:layout_weight="2"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
        <TextView
                android:id="@+id/recycler_view_v_txt_gender"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:text="@string/animal_name_temp"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
        <TextView
                android:id="@+id/recycler_view_v_txt_name"
                android:textColor="#000000"
                android:layout_margin="8dp"
                android:text="@string/animal_name_temp"
                android:textSize="16sp"
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:gravity="center"
                />


    </LinearLayout>



</androidx.cardview.widget.CardView>